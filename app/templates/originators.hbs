<!-- start: PAGE HEADER -->
<!-- start: TOOLBAR -->
<div class="toolbar row">
    <div class="col-sm-6 hidden-xs">
        <div class="page-header">
            <h1>Kaynaklar
                <small>SMS başlık bilgisi yönetimi</small>
            </h1>
        </div>
    </div>

</div>
<!-- end: TOOLBAR -->
<!-- end: PAGE HEADER -->
<!-- start: BREADCRUMB -->
<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li>
                {{#link-to 'home.index'}} Ana Ekran {{/link-to}}
            </li>
            <li class="active">Kaynaklar</li>
        </ol>
    </div>
</div>
<!-- end: BREADCRUMB -->
<!-- start: PAGE CONTENT -->
<div class="row">
    <div class="panel panel-white">
        <div class="panel-heading">
          <h4> SMS <span class="text-bold">Basliklari </span></h4>
        </div>
        <div class="panel-body">
            <p>
                {{#each originator in model}}
                <span class="btn btn-dark-orange btn-lg space10">
                    {{originator.title}} 
                    <a href="#" class="margin-left-5" {{action "delete" originator }}><i class="app-btn-subtitle fa fa-times text-white"></i></a>
                </span>
                {{/each}}
                <button {{bind-attr class=":btn :btn-default :btn-lg :add-tag adding :space10 " }}>
                    <a href="#" class="add-tag-button tooltips" data-original-title="Yeni baslik ekle" {{action "toggleAdding"}}>
                      <i class="fa fa-plus"></i>
                    </a>
                    {{input classNameBindings=":add-tag-input invalidTitle:error" value=newItem action='create' }}
                    <a href="#" class="add-tag-input" {{action "toggleAdding" }}><i class="fa fa-times add-tag-input margin-left-5"></i></a>
                </button>
            </p>
        </div>
    </div>
</div>
