{{#view "modal" headerTemplate="contact/contact-modal-header" footerTemplate="contact/contact-modal-footer"}}
    <h3>
         {{model.fullName}}
      </h3>
    <h4>
         {{phone-number model.primaryPhoneNumber}}
         {{#if model.secondaryPhoneNumber}}
            ({{phone-number model.secondaryPhoneNumber}})
         {{/if}}
      </h4>
    <h5>
         {{model.primaryEmailAddress}}
         {{#if model.secondaryEmailAddress}}
            ({{model.secondaryEmailAddress}})
         {{/if}}
      </h5>

    <div class="space20"></div>

    <table class="table table-condensed table-hover">
        <thead>
            <tr>
                <th colspan="3">Diger Bilgiler</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Dogum Tarihi</td>
                <td>{{date-string model.dateOfBirth}}</td>
            </tr>
            <tr>
                <td>Adres</td>
                <td>{{model.address}}</td>
            </tr>
            <tr>
                <td>Mesaja Acik</td>
                <td>
                    <span {{bind-attr class=":label :label-sm model.canReceiveMessages:label-success:label-danger" }}>
                     {{#if model.canReceiveMessages}}Evet{{else}}HayÄ±r{{/if}}
                  </span>
                </td>
            </tr>
            <tr>
                <td>Gruplar</td>
                <td style="line-height: 2em">
                    {{#each model.groups}}
                        <span class="label label-sm label-info margin-bottom-10">{{name}}</span>
                    {{/each}}
                </td>
            </tr>
        </tbody>
    </table>

    <div class="space20"></div>

    {{#if model.customFieldBindings}}
        <table class="table table-condensed table-hover">
            <thead>
                <tr>
                    <th colspan="3">Ozel Alanlar</th>
                </tr>
            </thead>
            <tbody>
                {{#each model.customFieldBindings}}
                    <tr>
                        <td>{{customField.label}}</td>
                        <td>{{custom-field-display value customField.type}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{/if}}
{{/view}}
