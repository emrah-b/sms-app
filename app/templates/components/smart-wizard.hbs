<ul>
    {{#each step in indexedSteps}}
    <li>
        <a {{bind-attr href=step.link}}>
            <label class="stepNumber">{{step.index}}</label>
            <span class="stepDesc">
                {{step.index}}. Adım
                <br />
                <small>{{step.description}}</small>
            </span>
        </a>
    </li>
    {{/each}}
</ul>
<div class="progress progress-xs transparent-black no-radius active">
    <div aria-valuemax="100" aria-valuemin="0" role="progressbar" class="progress-bar partition-green step-bar">
        <span class="sr-only"> %0 Tamamlandı</span>
    </div>
</div>
<div class="step">
    {{#each step in indexedSteps}}
    <form action="#" role="form" class="smart-wizard form-horizontal" id="form">
        <div {{bind-attr id=step.domId}}>
            <h2 class="StepTitle"> {{step.description}}</h2> 
            {{view "smart-wizard-step" templateName=step.template actions=step.actions}}
        </div>

    </form>
    {{/each}}
    <div class="form-group">
        <div {{bind-attr class=":col-sm-2 :col-sm-offset-3 isFirstStep:hidden" }}>
            <button class="btn btn-light-grey back-step btn-block" {{action 'goBackward'}}>
                <i class="fa fa-circle-arrow-left"></i> Geri
            </button>
        </div>
        <div class="col-sm-2 col-sm-offset-3">
        </div>
        <div {{bind-attr class=":col-sm-2 :col-sm-offset-3 isLastStep:hidden" }}>
            <button class="btn btn-blue next-step btn-block" {{action 'goForward'}}>
                İleri <i class="fa fa-arrow-circle-right"></i>
            </button>
        </div>
        <div {{bind-attr class=":col-sm-2 :col-sm-offset-3 isLastStep::hidden" }}>
            <button class="btn btn-success finish-step btn-block" {{action 'finish'}}>
                Tamamla <i class="fa fa-arrow-circle-right"></i>
            </button>
        </div>
    </div>
</div>
{{yield}}
