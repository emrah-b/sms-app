<div class="fileupload fileupload-new input-group">
    <div class="form-control">
    	{{#if value}} <i class="fa fa-file fileinput-exists fileupload-exists"></i> {{/if}}
    	<span class="fileupload-filename fileinput-filename">{{fileName}}</span>
    </div>

    <span {{bind-attr class=":input-group-addon :btn :btn-light-grey :btn-file value:hidden"}}>
    	<span {{bind-attr class=" :fileupload-new value:hidden"}}>
    		<i class="fa fa-folder-open-o"></i> Dosya seç
    	</span>
    	{{file-input value=value binary=data accept=accept}}
    </span>
    <a href="#" {{action "removeFile"}} {{bind-attr class=":input-group-addon :btn :btn-light-grey :fileinput-exists :fileupload-exists value::hidden"}} data-dismiss="fileinput"><i class="fa fa-times"></i> Kaldır</a>
</div>
