<div class="toolbar row">
   <div class="col-sm-6 hidden-xs">
      <div class="page-header">
         <h1>Kişiler
            <small>SMS Kontakları ve grup yönetimi</small>
         </h1>
      </div>
   </div>
   <div class="col-sm-6 col-xs-12">
      <div class="toolbar-tools pull-right">
         <ul class="nav navbar-right">
            <li class="dropdown">
               {{#link-to 'contacts.new'}}
                  <i class="fa fa-plus"></i>YENI{{/link-to}}
            </li>
            <li class="dropdown">
               {{#link-to 'contacts.excel-import'}}
                  <i class="fa fa-upload"></i>ICERI AL{{/link-to}}
            </li>
            <li class="dropdown">
               {{#link-to 'contacts.excel-export'}}
                  <i class="fa fa-download"></i>INDIR{{/link-to}}
            </li>
         </ul>
      </div>
   </div>

</div>
<!-- end: TOOLBAR -->
<!-- end: PAGE HEADER -->
<!-- start: BREADCRUMB -->
<div class="row">
   <div class="col-md-12">
      <ol class="breadcrumb">
         <li>
            {{#link-to 'home.index'}}Ana Ekran{{/link-to}}
         </li>
         <li class="active">Kisiler</li>
      </ol>
   </div>
</div>
<!-- end: BREADCRUMB -->
<!-- start: PAGE CONTENT -->
<div class="row">
   <div class="col-md-12">
      <div class="panel panel-white">
         <div class="panel-body">
            <div class="row">
               <div class="col-md-6">
                  <p>
                     {{#em-modal-toggler modal-id="confirm-delete" class="btn btn-orange" on-toggle="setMultipleDeletion" }}<i class="fa fa-trash-o"></i> &nbsp; Sil{{/em-modal-toggler}}
                  </p>
               </div>
               <div class="col-md-6 pull-right">
                  <div class="pull-right" id="sample_2_filter">
                     <label>
                        {{input type="text" class=":form-control :input-sm" placeholder="Kisi arama..." value=filter}}
                     </label>
                  </div>
               </div>
            </div>
            <div class="row">
               <div class="table-responsive col-md-12">
                  <table class="table table-stripe table-hover">
                     <thead>
                        <tr>
                           <th class="center">
                              {{#if allSelected}}
                                 <a {{action "clearSelection"}}><i class="fa fa-check-square fa-2x"></i></a> 
                              {{else}}
                                 <a {{action "selectAll"}}><i class="fa fa-square fa-2x"></i></a> 
                              {{/if}}
                           </th>
                           <th class="sorting">Isim</th>
                           <th class="sorting">Cep telefonu</th>
                           <th class="hidden-xs">Ikinci cep telefonu</th>
                           <th class="hidden-xs">E-Mail</th>
                           <th></th>
                        </tr>
                     </thead>
                     <tbody>
                        {{#each contact in filteredContent}}
                           <tr>
                              <td class="center">{{eb-checkbox checked=contact.selected}}</td>
                              <td>{{contact.fullName}}</td>
                              <td>{{contact.primaryPhoneNumber}}</td>
                              <td class="hidden-xs">{{contact.secondaryPhoneNumber}}</td>
                              <td class="hidden-xs">{{contact.primaryEmailAddress}}</td>
                              <td>
                                 <span class="tooltips" data-placement="top" data-original-title="Detay">
                                    {{#em-modal-toggler modal-id="contact-detail-modal" on-toggle="setContactForModal" contact=contact class="btn btn-xs btn-blue tooltips" }}<i class="fa fa-user"></i>
                                    {{/em-modal-toggler}}
                                 </span>
                              </td>
                           </tr>
                        {{/each}}
                     </tbody>
                  </table>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>

{{#em-modal configName="bs" id="contact-detail-modal" close-if=close}}
   {{#em-modal-title}}
      <h4><i class="fa fa-user"></i> Kisi Detayi</h4>
   {{/em-modal-title}}
   {{#em-modal-body}}
      <h3>
         {{selectedContact.fullName}}
      </h3>
      <h4>
         {{selectedContact.primaryPhoneNumber}}
         {{#if selectedContact.secondaryPhoneNumber}}
            ({{selectedContact.secondaryPhoneNumber}})
         {{/if}}
      </h4>
      <h5>
         {{selectedContact.primaryEmailAddress}}
         {{#if selectedContact.secondaryEmailAddress}}
            ({{selectedContact.secondaryEmailAddress}})
         {{/if}}
      </h5>

      <div class="space20"></div>

      <table class="table table-condensed table-hover">
         <thead>
            <tr>
               <th colspan="3">Diger Bilgiler</th>
            </tr>
         </thead>
         <tbody>
            <tr>
               <td>Dogum Tarihi</td>
               <td>{{date-string selectedContact.dateOfBirth}}</td>
            </tr>
            <tr>
               <td>Adres</td>
               <td>{{selectedContact.address}}</td>
            </tr>
            <tr>
               <td>Mesaja Acik</td>
               <td>
                  <span {{bind-attr class=":label :label-sm selectedContact.canReceiveMessages:label-success:label-danger" }}>
                     {{#if selectedContact.canReceiveMessages}}Evet{{else}}Hayır{{/if}}
                  </span>
               </td>
            </tr>
            <tr>
               <td>Gruplar</td>
               <td>
                  {{#each selectedContact.groups}}
                     <span class="label label-sm label-info">{{name}}</span>
                  {{/each}}
               </td>
            </tr>
         </tbody>
      </table>


      <div class="space20"></div>

      {{#if selectedContact.customFieldBindings}}
         <table class="table table-condensed table-hover">
            <thead>
               <tr>
                  <th colspan="3">Ozel Alanlar</th>
               </tr>
            </thead>
            <tbody>
               {{#each selectedContact.customFieldBindings}}
                  <tr>
                     <td>{{customField.label}}</td>
                     <td>{{custom-field-display value customField.type}}</td>
                  </tr>
               {{/each}}
            </tbody>
         </table>
      {{/if}}

   {{/em-modal-body}}
   {{#em-modal-footer}}
      <a {{bind-attr class=":btn :btn-default :pull-left confirmSingleDelete:hidden"}} {{action "setSingleDeletion"}}><i class="fa fa-trash-o"></i></a>
      <span {{bind-attr class=":pull-left confirmSingleDelete::hidden"}}>
         Emin misiniz? 
         <a class="btn btn-default" {{action "deleteSelected"}}><i class="fa fa-check"></i></a>
         <a class="btn btn-default" {{action "cancelConfirmSingleDelete"}}><i class="fa fa-times"></i></a>
      </span>
      {{#link-to "edit-contact" selectedContact.id class="btn btn-default pull-left"}}<i class="fa fa-edit"></i>{{/link-to}}

      {{#em-modal-toggler class="btn btn-orange" }}Kapat{{/em-modal-toggler}}
   {{/em-modal-footer}}
{{/em-modal}}

{{em-modal-confirm confirm-id="confirm-delete" configName="bs" close-if=close title="Sil" message="Secilen kisileri silmek istediginizden emin misiniz?" confirm="deleteSelected"}}
