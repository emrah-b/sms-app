<div class="toolbar row">
    <div class="col-sm-6 hidden-xs">
        <div class="page-header">
            <h1>Raporlar
                <small>Rapor ve grafikler</small>
            </h1>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li>
                {{#link-to 'home.index'}} Ana Ekran {{/link-to}}
            </li>
            <li class="active">Raporlar</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-white">
            <div class="panel-heading"><h4> Rapor <span class="text-bold">Seçimi </span></h4></div>
            <div {{bind-attr class=":panel-body"}} >
                {{#form-for reportCriteria wrapper="horizontal-form"}}
                    {{input reportType label="Rapor tipi" as="select2" collection=controller.reportTypes placeholder="Rapor tipi seçiniz"
                    optionLabelPath="name"}}
                    {{input startDate as="datepicker" label="Başlangıç"}}
                    {{input endDate as="datepicker" label="Son"}}
                    <div {{bind-attr class=":form-group :has-error reportCriteria.invalidDates::hidden"}}>
                        <div class="col-sm-2"></div>
                        <div class="col-sm-9">
                            <span class="help-block">Tarih seçimi geçersiz</span>
                        </div>
                    </div>
                    <button class="btn btn-primary" {{action "submit"}}>Getir</button>
                {{/form-for}}
                
            </div>
        </div>
    </div>
</div>
{{outlet}}


